# Frontend Environment Variables
# Copy this file to .env.local for development or .env.production for production

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Application Settings
VITE_ENVIRONMENT=development
VITE_APP_NAME=Simulation Platform
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_PERFORMANCE_MONITORING=false

# UI Configuration
VITE_DEFAULT_LANGUAGE=ko
VITE_THEME=light

# Analytics (if needed)
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_FIREBASE_CONFIG={"apiKey":"your-api-key","authDomain":"your-domain"}

# Production settings
# VITE_API_BASE_URL=https://your-backend-service-url
# VITE_ENVIRONMENT=production